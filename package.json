{
  "name": "pdf-tools-selfhosted",
  "version": "1.0.0",
  "description": "Self-hosted PDF tools for processing and manipulating PDF documents",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "lint": "eslint src/",
    "build": "npm run lint && npm test",
    "build:exe": "node build.js",
    "build:portable": "node build.js --portable",
    "build:installer": "node build.js --installer",
    "build:all": "npm run build:exe && npm run build:portable && npm run build:installer",
    "package:zip": "powershell Compress-Archive -Path .\\dist\\* -DestinationPath .\\pdf-tools-selfhosted-installer.zip -Force",
    "package:portable": "powershell Compress-Archive -Path .\\dist\\portable\\* -DestinationPath .\\pdf-tools-portable.zip -Force",
    "dist": "npm run build:all && npm run package:zip && npm run package:portable"
  },
  "keywords": [
    "pdf",
    "tools",
    "self-hosted",
    "pdf-processing",
    "document-manipulation"
  ],
  "author": "datastellar",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "form-data": "^4.0.4",
    "jimp": "^0.22.10",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.0.3",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "graceful-fs": "^4.2.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "scripts": [
      "src/**/*.js"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "compress": "GZip"
  }
}
